<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout_timeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"
        android:background="#02113E"
        android:orientation="vertical">

        <TextView
            android:id="@+id/time_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/zero_time"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="53sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_lapTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:background="#021E73"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView_laps"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <EditText
            android:id="@+id/editTextView_laps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#021E73"
            android:textColor="#F6D119"
            android:text="@string/zeroTime_lapView"
            android:padding="12dp"
            android:enabled="false"
            android:textSize="30sp" />
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_buttons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="13"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_button"
            android:background="#47B602"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/startButton"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/lap_button"
            android:background="#FFE500"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/lapButton"
            android:textStyle="bold"
            android:textSize="20sp" />

        <Button
            android:id="@+id/stop_reset_button"
            android:background="#CF0101"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/stop_resetButton"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>